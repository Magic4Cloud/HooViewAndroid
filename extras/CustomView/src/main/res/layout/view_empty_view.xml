<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:background="#f8f8f8">

        <LinearLayout
            android:id="@+id/empty_icon_title_ll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/empty_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/icon_cry"/>

            <TextView
                android:id="@+id/empty_title_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dip"
                android:drawablePadding="5dp"
                android:gravity="center"
                android:text="@string/empty_no_data_title"
                android:textColor="@color/text_gray"
                android:textSize="@dimen/text_size_title_h1"/>

            <TextView
                android:id="@+id/empty_sub_title_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dip"
                android:drawablePadding="5dp"
                android:gravity="center"
                android:paddingBottom="3dp"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:paddingTop="3dp"
                android:text=""
                android:textColor="@color/text_btn_selector"
                android:textSize="@dimen/text_size_title_h2"/>
        </LinearLayout>

        <Button
            android:id="@+id/empty_btn"
            android:layout_width="210dp"
            android:layout_height="@dimen/button_common_height"
            android:layout_below="@id/empty_icon_title_ll"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="63dip"
            android:background="@drawable/radius_btn_selector"
            android:focusable="true"
            android:text="@string/text_nearby_open_location_bt"
            android:textColor="@color/text_white"
            android:textSize="@dimen/text_size_13"
            android:visibility="gone"/>

        <ImageView
            android:id="@+id/loading_icon_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:visibility="gone"/>
    </RelativeLayout>
</RelativeLayout>
