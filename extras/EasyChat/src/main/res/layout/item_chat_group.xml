<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="62dp"
    android:background="@drawable/list_item_selector">
    <com.easyvaas.common.widget.RoundImageView
        android:id="@+id/msg_logo_iv"
        android:layout_width="38dp"
        android:layout_height="38dp"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="4dp"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:scaleType="fitCenter"
        app:type="circle"/>
    <TextView
        android:id="@+id/msg_title_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/msg_logo_iv"
        android:layout_alignTop="@id/msg_logo_iv"
        android:layout_marginLeft="14dp"
        android:singleLine="true"
        android:maxLength="9"
        android:ellipsize="end"
        android:text=""
        android:textSize="@dimen/text_size_title_h2"
        android:textColor="@color/text_common"/>
    <LinearLayout
        android:id="@+id/message_data_rl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="15dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_alignTop="@id/msg_title_tv"
        android:orientation="vertical">
        <TextView
            android:id="@+id/msg_date_time_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="@color/text_gray"
            android:textSize="@dimen/text_size_12"/>
        <ImageView
            android:id="@+id/group_owner_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:visibility="gone"
            android:src="@drawable/icon_group_main"/>
    </LinearLayout>


    <TextView
        android:id="@+id/msg_subtitle_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/msg_title_tv"
        android:layout_below="@id/msg_title_tv"
        android:layout_marginRight="15dp"
        android:layout_marginTop="2dp"
        android:ellipsize="end"
        android:singleLine="true"
        android:text=""
        android:textSize="@dimen/text_size_12"
        android:textColor="@color/text_gray"/>
    <TextView
        android:id="@+id/msg_unread_count_tv"
        style="@style/red_digital_remind"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="35dp"
        android:layout_marginTop="12dp"
        android:visibility="gone"/>
    <ImageView
        style="@style/default_horizontal_line_style"
        android:layout_alignParentBottom="true"/>
</RelativeLayout>
