<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/message_top_title_rl"
    android:layout_width="match_parent"
    android:layout_height="@dimen/action_bar_height"
    android:background="@color/pure_white">
    <ImageView
        android:id="@+id/close_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:padding="10dp"
        android:layout_marginLeft="5dp"
        android:src="@drawable/ic_arrow_action_bar_back"/>
    <TextView
        android:id="@+id/common_custom_title_tv"
        android:layout_width="match_parent"
        android:layout_height="@dimen/action_bar_height"
        android:gravity="center"
        android:textSize="@dimen/action_bar_menu_text_size"
        android:textColor="@color/login_text_color_2"/>
    <LinearLayout
        android:id="@+id/add_option_view"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:paddingRight="15dp"
        android:gravity="center"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/add_option_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/commit"
            android:textColor="@color/btn_color_secondary_level"
            android:textSize="@dimen/text_size_title_h1"
            android:visibility="gone"/>
    </LinearLayout>
</RelativeLayout>
