<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/item_video_living"
        android:layout_width="match_parent"
        android:layout_height="96dp"
        android:background="?attr/selectableItemBackground"
        android:paddingBottom="10dp"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:paddingTop="16dp">

        <RelativeLayout
            android:id="@+id/fl_cover"
            android:layout_width="120dp"
            android:layout_height="70dp">

            <ImageView
                android:id="@+id/iv_cover"
                android:layout_width="120dp"
                android:layout_height="70dp"
                android:background="@drawable/account_bitmap_list"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_alignParentBottom="true"
                android:background="#66303030">

                <ImageView
                    android:id="@+id/iv_eye"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_eye"/>

                <TextView
                    android:id="@+id/tv_watch_count"
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:layout_toLeftOf="@+id/iv_hot"
                    android:layout_toRightOf="@+id/iv_eye"
                    android:gravity="center_vertical"
                    android:maxLines="1"
                    android:text="17,184人观看"
                    android:textColor="@color/white"
                    android:textSize="14sp"/>

                <ImageView
                    android:id="@+id/iv_hot"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="4dp"
                    android:layout_centerVertical="true"
                    android:src="@drawable/ic_hot"/>

            </RelativeLayout>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="14dp"
            android:layout_toRightOf="@+id/fl_cover">

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="match_parent"
                android:layout_height="22dp"
                android:ellipsize="end"
                android:gravity="start"
                android:maxLines="1"
                android:text="安邦举牌格力的可能性分析"
                android:textColor="@color/title_text_color"
                android:textSize="16sp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_centerVertical="true"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_name"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:maxLength="6"
                    android:text="金色红牛"
                    android:textColor="@color/text_color_gray"
                    android:textSize="14sp"/>

                <TextView
                    android:id="@+id/tv_time"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:text="01/12 12:30"
                    android:textColor="@color/text_color_gray"
                    android:textSize="14sp"/>

            </LinearLayout>

            <android.support.v7.widget.CardView
                android:id="@+id/cv_operator"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_alignParentBottom="true"
                android:elevation="0dp"
                app:cardCornerRadius="4dp"
                app:cardPreventCornerOverlap="false">

                <TextView
                    android:id="@+id/tv_operator"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:background="@color/video_living_living"
                    android:gravity="center"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:text="直播中"
                    android:textColor="@color/white"
                    android:textSize="12sp"/>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/cv_pay"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="6dp"
                android:layout_toRightOf="@+id/cv_operator"
                android:elevation="0dp"
                app:cardCornerRadius="4dp"
                app:cardPreventCornerOverlap="false">

                <TextView
                    android:id="@+id/tv_pay"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:background="@color/video_living_pay"
                    android:gravity="center"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:text="付费"
                    android:textColor="@color/white"
                    android:textSize="12sp"/>

            </android.support.v7.widget.CardView>

        </RelativeLayout>

    </RelativeLayout>

    <View
        android:id="@+id/view_divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:background="#f8f8f8"/>

</LinearLayout>