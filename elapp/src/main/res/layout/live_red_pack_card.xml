<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="wrap_content"
  android:layout_height="wrap_content"
  android:background="@drawable/red_pack_card_bg"
  android:visibility="invisible">

  <TextView
    android:id="@+id/red_pack_card_title_tv"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginLeft="8dp"
    android:layout_marginRight="8dp"
    android:layout_marginTop="8dp"
    android:textColor="@color/text_yellow"
    android:textSize="@dimen/text_size_13"/>

  <TextView
    android:id="@+id/red_pack_card_content_tv"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_below="@id/red_pack_card_title_tv"
    android:layout_marginLeft="8dp"
    android:layout_marginRight="8dp"
    android:layout_marginTop="6dp"
    android:maxLength="10"
    android:singleLine="true"
    android:textColor="@color/text_white"
    android:textSize="@dimen/text_size_12"/>

  <TextView
    android:id="@+id/red_pack_card_type_tv"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignParentBottom="true"
    android:layout_marginBottom="5dp"
    android:layout_marginLeft="8dp"
    android:layout_marginRight="8dp"
    android:textColor="@color/text_user_info"
    android:textSize="@dimen/text_size_10"
    android:text="@string/red_pack_type_system"/>

</RelativeLayout>