<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/normal_gray_bg"
    tools:context="com.hooview.app.activity.HooViewHomeActivity">

    <!--<com.bigkoo.convenientbanner.ConvenientBanner-->
    <!--android:id="@+id/convenientBanner"-->
    <!--android:layout_width="match_parent"-->
    <!--android:layout_height="160dp"-->
    <!--android:layout_marginTop="57dp"-->
    <!--android:background="@color/btn_gray_normal" />-->

    <RadioGroup
        android:id="@+id/home_radiogroup"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:paddingTop="4dp"
        android:layout_alignParentBottom="true"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/button_home"
            style="@style/style_RadioButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:drawableTop="@drawable/selector_home_buttom_home" />

        <View
            android:layout_width="1dp"
            android:layout_height="14dp"
            android:background="@color/hv662d80" />

        <RadioButton
            android:id="@+id/button_message"
            style="@style/style_RadioButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:drawableTop="@drawable/selector_home_buttom_message" />

    </RadioGroup>

    <com.hooview.app.view.NoScrollViewPager
        android:id="@+id/viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/home_radiogroup"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_above="@+id/home_radiogroup"
        android:background="@drawable/shape_toolbar_shadow_reverse"
        />


</RelativeLayout>
