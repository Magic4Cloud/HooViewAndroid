<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/live_user_info_show_rl"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/pure_white"
    android:focusable="true"
    android:visibility="gone">
    <com.easyvaas.common.widget.MyUserPhoto
        android:id="@+id/live_user_portrait"
        android:scaleType="fitCenter"
        android:background="@drawable/icon_photo_shape_bg"
        android:layout_width="@dimen/avatar_big_big_size"
        android:layout_height="@dimen/avatar_big_big_size"
        android:layout_marginTop="18dp"
        android:layout_marginLeft="18dp"
        app:is_vip="no_vip"
        app:border_color="@android:color/transparent"
        app:border_width="0dp"
        app:small_height="9dp"
        app:small_width="9dp"/>

    <TextView
        android:id="@+id/official_cert_level_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/live_user_portrait"
        android:layout_alignLeft="@id/live_user_portrait"
        android:layout_marginLeft="1.5dp"
        android:layout_marginTop="6dp"
        android:gravity="center_vertical"
        android:textSize="@dimen/text_size_10"
        android:textColor="@color/text_red"
        android:text="@string/official_certification"
        android:background="@drawable/live_icon_official"
        android:visibility="gone"/>

    <RelativeLayout
        android:id="@+id/user_info_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/live_user_portrait"
        android:layout_alignTop="@id/live_user_portrait"
        android:layout_marginLeft="18dp"
        android:layout_marginRight="9dp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/user_name_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:singleLine="true"
            android:ellipsize="end"
            android:maxWidth="146dp"
            android:textSize="@dimen/text_size_title_h1"
            android:textColor="@color/text_color_main"
            android:textStyle="bold"
            android:text=""/>
        <TextView
            android:id="@+id/report_tv"
            android:layout_width="45dp"
            android:layout_height="21dp"
            android:layout_marginLeft="9dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:text="@string/report"
            android:gravity="center"
            android:visibility="gone"
            android:textSize="@dimen/text_size_13"
            android:textColor="@color/text_gray"
            android:background="@drawable/btn_round_user_report_bg"/>
    </RelativeLayout>
    <TextView
        android:id="@+id/user_id_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/user_info_ll"
        android:layout_alignLeft="@id/user_info_ll"
        android:layout_marginTop="8dp"
        android:textSize="@dimen/text_size_12"
        android:textColor="@color/text_color_secondary_level"
        android:text=""/>
    <TextView
        android:id="@+id/video_title_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/user_id_tv"
        android:layout_alignLeft="@id/user_info_ll"
        android:layout_marginTop="8dp"
        android:textSize="@dimen/text_size_12"
        android:textColor="@color/text_color_secondary_level"
        android:maxLines="2"
        android:ellipsize="end"
        android:text=""/>

    <include
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_below="@id/video_title_tv"
        layout="@layout/include_live_user_info"/>
</RelativeLayout>
