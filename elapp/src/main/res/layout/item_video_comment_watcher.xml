<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <LinearLayout
        android:id="@+id/ll_other"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvLevelOther"
                style="@style/CommentLevelStyle"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="12dp"
                android:visibility="gone"
                android:text="LV222" />

            <TextView
                android:id="@+id/tvNameOther"
                android:layout_width="wrap_content"
                android:layout_height="22dp"
                android:layout_marginLeft="5dp"
                android:text="郭郡"
                android:textColor="@color/comment_name_other"
                android:textSize="16sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/tvCommentOther"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="12dp"
            android:background="@drawable/bg_chat_others"
            android:paddingBottom="2dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="2dp"
            android:text="看见了来开就看见了极乐空间了解了解李经理骷髅精灵就快了极乐空间拉开距离极乐空间李经理看见了看见了看见了框架"
            android:textColor="@color/text_color_black"
            android:textSize="16sp" />
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/rl_my"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:visibility="gone">

        <TextView
            android:id="@+id/tvComment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:layout_toLeftOf="@+id/ll_user"
            android:background="@drawable/bg_chat_myself_vip"
            android:paddingBottom="2dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="2dp"
            android:text="看见了来开就看见了极乐空间了解了解李经理骷髅精灵就快了极乐空间拉开距离极乐空间李经理看见了看见了看见了框架"
            android:textColor="@color/text_color_black"
            android:textSize="16sp" />


        <LinearLayout
            android:id="@+id/ll_user"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="12dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvName"
                android:layout_width="wrap_content"
                android:layout_height="22dp"
                android:layout_marginLeft="5dp"
                android:text="郭郡"
                android:textColor="@color/comment_name_my"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tvLevel"
                style="@style/CommentLevelStyle"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="12dp"
                android:background="@drawable/shape_comment_level_my"
                android:text="LV222"
                android:visibility="gone" />
        </LinearLayout>
    </RelativeLayout>

    <TextView
        android:id="@+id/tv_tips"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
</FrameLayout>