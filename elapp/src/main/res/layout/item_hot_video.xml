<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/ll_hot_video"
    android:layout_width="132dp"
    android:layout_height="88dp"
    android:orientation="vertical">

    <com.easyvaas.common.widget.RoundImageView
        android:id="@+id/riv_thumb"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:border_radius="4dp"
        app:type="round" />

    <com.easyvaas.common.widget.RoundImageView
        android:layout_width="132dp"
        android:layout_height="88dp"
        android:src="@drawable/shape_round4_mask"
        app:border_radius="4dp"
        app:type="round" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_hot_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="6dp"
            android:lines="2"
            android:text="来听听资深大牛怎么讲"
            android:textColor="@color/text_color_white"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tv_hot_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:lines="1"
            android:text="11.23更新"
            android:textColor="@color/text_color_white"
            android:textSize="14sp" />
    </LinearLayout>
</FrameLayout>