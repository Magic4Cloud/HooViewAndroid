<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal">
    <Button
        android:id="@+id/cash_in_confirm_btn"
        android:layout_width="335dp"
        android:layout_height="@dimen/button_common_height"
        android:layout_marginTop="9dp"
        android:layout_centerHorizontal="true"
        android:textColor="@color/white"
        android:textSize="@dimen/text_size_title_h2"
        android:text="@string/cash_in_confirm"
        android:background="@drawable/common_fill_round_three_btn_blue_selector"
        style="?android:buttonBarButtonStyle"/>

    <TextView
        android:id="@+id/cash_in_tip_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/cash_in_confirm_btn"
        android:gravity="center"
        android:padding="9dp"
        android:drawableLeft="@drawable/personal_icon_question_mark"
        android:drawablePadding="3dp"
        android:text="@string/faq_assert"
        android:textSize="@dimen/text_size_12"
        android:visibility="gone"
        android:textColor="@color/text_color_secondary_level"/>
</RelativeLayout>
