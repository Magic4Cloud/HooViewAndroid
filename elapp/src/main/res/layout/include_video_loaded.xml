<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/video_loaded"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/live_room_bg"
    android:orientation="vertical"
    android:visibility="gone">

    <LinearLayout
        android:id="@+id/ll_tips"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_gravity="center"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/video_loading_logo_iv"
            android:layout_width="60dp"
            android:layout_height="53dp"
            android:layout_gravity="center"
            android:src="@drawable/ic_gray_logo" />

        <TextView
            android:id="@+id/loading_net_speed_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:text="@string/net_error_tips"
            android:textColor="@color/text_color_white"
            android:textSize="@dimen/text_size_title_h2" />
    </LinearLayout>

    <TextView
        android:layout_width="124dp"
        android:layout_height="40dp"
        android:layout_below="@+id/ll_tips"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="36dp"
        android:background="@drawable/shape_common_btn_b"
        android:gravity="center"
        android:text="@string/retry_connect"
        android:textColor="@color/text_color_white"
        android:textSize="16sp" />

</RelativeLayout>
