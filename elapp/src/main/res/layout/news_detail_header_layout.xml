<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"

    >
        <TextView
            android:id="@+id/detail_header_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:textColor="@color/title_text_color"
            android:textStyle="bold"
            android:layout_marginTop="15dp"
            android:text="莫迪回应废钞我们终将进入无纸钞社会社莫迪回应废钞我们"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/detail_header_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:textColor="@color/text_color_gray"
                android:text="今天 16:40"
                tools:text="今天 16:40"/>
            <TextView
                android:id="@+id/detail_header_crawler_auther"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:layout_marginLeft="12dp"
                android:textColor="@color/text_color_gray"
                android:text="浅海绫"
                tools:text="浅海绫"/>
        </LinearLayout>

    <RelativeLayout
        android:id="@+id/detail_header_user_layout"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:layout_marginTop="15dp"
        android:background="#f7f7f7">

        <com.easyvaas.common.widget.RoundImageView
            android:id="@+id/detail_header_user_header"
            android:layout_width="46dp"
            android:layout_height="46dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="16dp"
            android:src="@drawable/account_bitmap_user"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="12dp"
            android:layout_toRightOf="@+id/detail_header_user_header"
            android:orientation="vertical">

            <TextView
                android:id="@+id/detail_header_user_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:text="@string/nickname"
                android:textColor="@color/title_text_color"
                android:textSize="14sp"/>

            <TextView
                android:id="@+id/detail_header_user_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:textColor="@color/text_color_gray"
                tools:text="财经神器一二三"
                android:textSize="12sp"/>

        </LinearLayout>
    </RelativeLayout>
    <LinearLayout
        android:id="@+id/detail_header_stock_tags_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="16dp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/detail_header_stock_tag_one"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:text="四川路桥 -0.05%"
            android:background="@drawable/news_detail_stock_tag_selector"
            tools:text="四川路桥 -0.05%"
            />

        <TextView
            android:id="@+id/detail_header_stock_tag_two"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:layout_marginLeft="16dp"
            android:text="四川路桥 -0.05%"
            android:background="@drawable/news_detail_stock_tag_selector"
            tools:text="四川路桥 -0.05%"
            />


    </LinearLayout>
    <com.nex3z.flowlayout.FlowLayout
        android:id="@+id/detail_header_news_tags_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="17dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        app:childSpacing="12dp"
        app:childSpacingForLastRow="align"
        app:rowSpacing="16dp" >
    </com.nex3z.flowlayout.FlowLayout>
</merge>