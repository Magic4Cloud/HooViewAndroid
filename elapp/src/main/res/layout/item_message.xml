<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <TextView
        android:id="@+id/msg_date_time_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="14dp"
        android:gravity="center"
        android:textColor="@color/text_gray"
        android:textSize="@dimen/text_size_12"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="bottom"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/user_logo_iv"
            android:layout_width="38dp"
            android:layout_height="38dp"
            android:layout_marginLeft="14dp"
            android:scaleType="fitCenter"
            android:src="@drawable/somebody"/>
        <TextView
            android:id="@+id/msg_content_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="80dp"
            android:gravity="center"
            android:textColor="@color/text_color_main"
            android:textSize="@dimen/text_size_title_h2"
            android:text="@string/submit_ok"
            android:background="@drawable/chat_item_receive_selector"/>
    </LinearLayout>
</LinearLayout>
