<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/title_height"
    android:background="@color/title_view_bg"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/iv_logo"
        android:layout_width="22dp"
        android:layout_height="20dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="12dp"
        android:src="@drawable/logo" />

    <RadioGroup
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="14dp"
        android:layout_toEndOf="@+id/iv_logo"
        android:layout_toRightOf="@+id/iv_logo"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/tv_market"
            style="@style/MarketMainTabStyle"
            android:checked="true"
            android:text="@string/market" />

        <RadioButton
            android:id="@+id/tv_my_stock"
            style="@style/MarketMainTabStyle"
            android:layout_marginLeft="24dp"
            android:text="@string/my_stock" />
    </RadioGroup>

    <ImageView
        android:id="@+id/iv_search"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="6dp"
        android:padding="11dp"
        android:scaleType="center"
        android:src="@drawable/market_search" />

    <ImageView
        android:id="@+id/iv_edit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:visibility="gone"
        android:layout_marginRight="2dp"
        android:layout_toLeftOf="@+id/iv_search"
        android:padding="11dp"
        android:scaleType="center"
        android:src="@drawable/market_edit" />

</RelativeLayout>
