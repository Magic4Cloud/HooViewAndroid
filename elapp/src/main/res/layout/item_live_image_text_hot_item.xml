<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="152dp"
    android:layout_height="172dp"
    android:background="@color/white">

    <LinearLayout
        android:id="@+id/item_image_text_hot"
        android:layout_width="152dp"
        android:layout_height="match_parent"
        android:background="?attr/selectableItemBackground"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:paddingBottom="20dp"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:paddingTop="20dp">

        <com.easyvaas.common.widget.RoundImageView
            android:id="@+id/image_text_hot_thumb"
            android:layout_width="80dp"
            android:layout_height="80dp"/>

        <TextView
            android:id="@+id/image_text_hot_name"
            android:layout_width="128dp"
            android:layout_height="22dp"
            android:layout_marginTop="4dp"
            android:ellipsize="end"
            android:gravity="center_horizontal"
            android:maxLines="1"
            android:text="金色红牛的直播间"
            android:textColor="@color/title_text_color"
            android:textSize="16sp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/image_text_hot_hot"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:src="@drawable/ic_hot"/>

            <TextView
                android:id="@+id/image_text_hot_watch_count"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_marginLeft="4dp"
                android:maxLines="1"
                android:text="17,184人观看"
                android:textColor="@color/text_gray"
                android:textSize="14sp"/>

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>