<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentBottom="true"
    android:background="#fff"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rl_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/editText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="76dp"
            android:layout_marginTop="10dp"
            android:background="#fff"
            android:hint="大师，快来聊天吧"
            android:maxLength="1000"
            android:maxLines="5"
            android:textSize="16dp"/>

        <View
            android:id="@+id/line"
            android:layout_width="1dp"
            android:layout_height="32dp"
            android:layout_alignBottom="@id/editText"
            android:layout_marginRight="8dp"
            android:layout_toLeftOf="@+id/iv_send"
            android:background="#d9d9d9"/>

        <ImageView
            android:id="@+id/iv_send"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_alignBottom="@id/editText"
            android:layout_alignParentRight="true"
            android:layout_marginRight="11dp"
            android:padding="5dp"
            android:src="@drawable/btn_send_n"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_option"
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:background="#f8f8f8"
        android:visibility="visible">

        <RadioGroup
            android:id="@+id/rgMsgType"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/tvNormal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:button="@null"
                android:checked="true"
                android:text="普通"
                android:textColor="@color/selector_msg_type_btn"/>

            <RadioButton
                android:id="@+id/tvImportant"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="21dp"
                android:button="@null"
                android:text="高亮"
                android:textColor="@color/selector_msg_type_btn"/>

            <RadioButton
                android:id="@+id/tvStick"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="21dp"
                android:button="@null"
                android:text="置顶"
                android:textColor="@color/selector_msg_type_btn"/>
        </RadioGroup>

        <ImageView
            android:id="@+id/iv_image"
            android:layout_width="29dp"
            android:layout_height="29dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="9dp"
            android:padding="7dp"
            android:src="@drawable/btn_add_picture_n"/>
    </RelativeLayout>

    <View
        android:id="@+id/placeholder_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"/>
</LinearLayout>