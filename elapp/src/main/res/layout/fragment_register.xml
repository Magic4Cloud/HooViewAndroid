<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:fitsSystemWindows="true"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_color_gray">
    <include
        android:id="@+id/common_title_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        layout="@layout/common_header_layout"/>
    <include
        android:id="@+id/country_code_rl"
        android:layout_width="match_parent"
        android:layout_centerHorizontal="true"
        android:layout_height="@dimen/avatar_big_second_size"
        android:layout_below="@id/common_title_tv"
        android:layout_marginTop="10dp"
        layout="@layout/include_country_code_item"/>

    <RelativeLayout
        android:id="@+id/phone_number_rl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/country_code_rl">
        <EditText
            android:id="@+id/register_phone_et"
            style="@style/register_input_style"
            android:layout_centerHorizontal="true"
            android:inputType="phone"
            android:maxLength="11"
            android:imeOptions="actionNext"
            android:textColor="@color/login_text_color_3"
            android:textSize="@dimen/text_size_title_h1"
            android:textColorHint="@color/text_color_three_level"
            android:hint="@string/prompt_input_phone_hint"/>
        <ImageView
            android:id="@+id/clear_phone_number_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignRight="@id/register_phone_et"
            android:padding="15dp"
            android:visibility="gone"
            android:layout_centerVertical="true"
            android:src="@drawable/login_icon_edit_clear"/>
        <ImageView
            style="@style/default_horizontal_line_style"/>
        <ImageView
            android:layout_below="@+id/register_phone_et"
            style="@style/default_horizontal_line_style"/>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/verification_code_rl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/phone_number_rl">
        <EditText
            android:id="@+id/verification_code_et"
            style="@style/register_input_style"
            android:layout_centerHorizontal="true"
            android:inputType="phone"
            android:maxLength="4"
            android:imeOptions="actionNext"
            android:textColor="@color/login_text_color_3"
            android:textSize="@dimen/text_size_title_h1"
            android:textColorHint="@color/text_color_three_level"
            android:hint="@string/verification_code_input"/>
        <com.easyvaas.common.widget.TimeButton
            android:id="@+id/register_btn"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_alignRight="@id/verification_code_et"
            android:layout_marginRight="15dp"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="13sp"
            android:layout_centerVertical="true"
            android:text="@string/get_verification"
            android:background="@drawable/login_red_round_btn_selector"
            app:background_running="@drawable/login_register_btn_selector"
            app:text_color_running="@color/text_gray"
            app:text_running="@string/get_verification_count_down"
            app:countdown_length="60000"/>
        <ImageView
            android:layout_below="@+id/verification_code_et"
            style="@style/default_horizontal_line_style"/>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/set_password_rl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/verification_code_rl">
        <EditText
            android:id="@+id/set_password_et"
            style="@style/register_input_style"
            android:layout_centerHorizontal="true"
            android:maxLength="16"
            android:imeOptions="actionGo"
            android:inputType="textPassword"
            android:digits="0123456789abcdefghigklmnopqrstuvwxyzQWERTYUIOPASDFGHJKLZXCVBNM"
            android:textColor="@color/login_text_color_3"
            android:textSize="@dimen/text_size_title_h1"
            android:textColorHint="@color/text_color_three_level"
            android:hint="@string/msg_login_set_password"/>
        <ImageView
            android:id="@+id/clear_set_password_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignRight="@id/set_password_et"
            android:padding="15dp"
            android:visibility="gone"
            android:layout_centerVertical="true"
            android:src="@drawable/login_icon_edit_clear"/>
    </RelativeLayout>

    <Button
        android:id="@+id/commit_btn"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@id/set_password_rl"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="30dp"
        android:textColor="@color/white"
        android:textSize="@dimen/text_size_title_h1"
        android:layout_centerHorizontal="true"
        android:text="@string/next_step"
        android:background="@drawable/common_fill_round_three_btn_blue_selector"
        style="?android:buttonBarButtonStyle"/>
    <LinearLayout
        android:id="@+id/login_bottom_tips_ll"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="30dp"
        android:gravity="center_vertical"
        android:paddingLeft="3dp"
        android:paddingRight="3dp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/login_bottom_tips_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:textColor="@color/login_text_color"
            android:text="@string/msg_login_agreement"/>
    </LinearLayout>

</RelativeLayout>
