<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/black">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <com.easyvaas.sdk.live.base.view.CameraPreview
            android:id="@+id/camera_preview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </FrameLayout>

    <RelativeLayout
        android:id="@+id/live_options_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:layout_gravity="bottom"
        android:layout_marginBottom="12dp"
        android:visibility="gone">
        <LinearLayout
            android:id="@+id/live_options_left_ll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:gravity="center"
            android:visibility="gone"
            android:background="@drawable/round_live_options_bg">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_weight="1">

                <CheckBox
                    android:id="@+id/live_mute_cb"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:button="@null"
                    android:drawableLeft="@drawable/ic_live_mute"
                    android:gravity="center"
                    android:textColor="@color/text_white"
                    android:textSize="@dimen/text_size_11"
                    android:checked="false"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_weight="1">
                <CheckBox
                    android:id="@+id/live_flash_cb"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/ic_live_flash"
                    android:checked="false"
                    android:button="@null"
                    android:gravity="center_vertical"
                    android:textColor="@color/text_white"
                    android:textSize="@dimen/text_size_11"/>
            </LinearLayout>

            <ImageView
                android:id="@+id/live_options_left_arrow_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:src="@drawable/live_icon_more_back"/>
        </LinearLayout>
        <RelativeLayout
            android:id="@+id/live_options_right_ll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/live_options_right_arrow_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:src="@drawable/live_icon_more"/>
            <ImageView
                android:id="@+id/live_comment_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/live_options_right_arrow_iv"
                android:layout_marginLeft="14dp"
                android:src="@drawable/watch_icon_chat"/>
            <CheckBox
                android:id="@+id/live_beauty_cb"
                style="@style/live_set_checkbox_style"
                android:layout_toLeftOf="@+id/live_switch_camera_cb"
                android:layout_marginLeft="14dp"
                android:drawableLeft="@drawable/living_beauty_selector"/>
            <CheckBox
                android:id="@+id/live_switch_camera_cb"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@+id/live_share_iv"
                android:layout_marginLeft="14dp"
                android:background="@drawable/live_icon_cut"
                android:checked="false"
                android:button="@null"/>
            <ImageView
                android:id="@+id/live_share_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@+id/live_send_red_pack_iv"
                android:layout_marginLeft="14dp"
                android:src="@drawable/live_icon_share"/>
            <ImageView
                android:id="@+id/live_send_red_pack_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginLeft="14dp"
                android:src="@drawable/live_red_pack_icon"/>
        </RelativeLayout>
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/camera_zoom_ll"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left|top"
        android:layout_marginTop="112dp"
        android:paddingRight="20dp"
        android:paddingLeft="7dp"
        android:paddingTop="21dp"
        android:paddingBottom="18dp"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:visibility="gone">

        <ImageView
            android:id="@+id/camera_zoom_plus_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="9dp"
            android:src="@drawable/lens_plus"/>

        <com.easyvaas.common.widget.verticalseekbar.VerticalSeekBarWrapper
            android:layout_width="wrap_content"
            android:layout_height="180dp">
            <com.easyvaas.common.widget.verticalseekbar.VerticalSeekBar
                style="@style/zoom_seekBar"
                android:id="@+id/camera_zoom_bar"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:max="1000"
                app:seekBarRotation="CW270"/>
            <!--Rotation: CW90 or CW270 -->
        </com.easyvaas.common.widget.verticalseekbar.VerticalSeekBarWrapper>

        <ImageView
            android:id="@+id/camera_zoom_less_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingRight="9dp"
            android:paddingLeft="9dp"
            android:paddingBottom="9dp"
            android:src="@drawable/lens_less"/>
    </LinearLayout>

    <com.easyvaas.common.widget.focusindicatorview.FocusIndicatorView
        android:id="@+id/focus_area_pane"
        android:layout_width="51dp"
        android:layout_height="51dp"
        android:src="@drawable/focusicon"
        android:layout_gravity="center"/>
</FrameLayout>
