<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="98dp"
    android:orientation="vertical"
    android:background="@color/white">

    <View
        android:layout_width="match_parent"
        android:layout_height="4dp"
        android:background="#f8f8f8"/>

    <LinearLayout
        android:id="@+id/item_image_text"
        android:layout_width="match_parent"
        android:layout_height="94dp"
        android:background="?attr/selectableItemBackground"
        android:orientation="horizontal"
        android:paddingBottom="14dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:paddingTop="12dp">

        <com.easyvaas.common.widget.RoundImageView
            android:id="@+id/image_text_cover"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/logo"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="24dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/image_text_title"
                android:layout_width="match_parent"
                android:layout_height="22dp"
                android:ellipsize="end"
                android:gravity="start"
                android:maxLines="1"
                android:text="经济巡航的直播间"
                android:textColor="@color/title_text_color"
                android:textSize="16sp"/>

            <TextView
                android:id="@+id/image_text_introduce"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_marginTop="2dp"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="火眼财经资深投顾"
                android:textColor="@color/text_gray"
                android:textSize="14sp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_marginTop="4dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/image_text_hot"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:layout_marginRight="4dp"
                    android:src="@drawable/ic_hot"/>

                <TextView
                    android:id="@+id/image_text_follow_count"
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:maxLines="1"
                    android:text="7,184人参与"
                    android:textColor="@color/text_gray"
                    android:textSize="14sp"/>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>