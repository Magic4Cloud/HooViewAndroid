<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_height"
        android:background="@color/title_view_bg"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:scaleType="center"
            android:src="@drawable/icon_back"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginTop="3dp"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:gravity="center"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="this is title"
                android:textSize="14sp"/>

            <TextView
                android:id="@+id/tv_subhead"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_title"
                android:layout_centerHorizontal="true"
                android:text="this is subhead"
                android:textSize="14sp"/>

        </LinearLayout>
    </RelativeLayout>


    <FrameLayout
        android:id="@+id/fl_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/title"/>

    <RelativeLayout
        android:id="@+id/rl_bottom_stock"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:background="@android:color/white">

        <TextView
            android:id="@+id/tv_stock_comment_hint"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="15dp"
            android:layout_toLeftOf="@+id/tv_add"
            android:gravity="center_vertical"
            android:text="@string/stock_detail_chat_hint"/>

        <TextView
            android:id="@+id/tv_stock_add"
            style="@style/MarketDetailButtonStyle"
            android:layout_marginRight="42dp"
            android:layout_toLeftOf="@+id/tv_stock_share"
            android:drawableTop="@drawable/selector_selected_btn_state"
            android:text="@string/add_stock_btn"/>

        <TextView
            android:id="@+id/tv_stock_share"
            style="@style/MarketDetailButtonStyle"
            android:layout_marginRight="42dp"
            android:layout_toLeftOf="@+id/tv_stock_refresh"
            android:drawableTop="@drawable/icon_share"
            android:text="@string/share"/>

        <TextView
            android:id="@+id/tv_stock_refresh"
            style="@style/MarketDetailButtonStyle"
            android:layout_alignParentRight="true"
            android:layout_marginRight="17dp"
            android:drawableTop="@drawable/market_refresh_gray"
            android:text="@string/refresh"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/line_gray"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_bottom_news"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:background="@android:color/white"
        android:visibility="gone">

        <TextView
            android:id="@+id/tv_news_comment_hint"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="15dp"
            android:layout_toLeftOf="@+id/tv_add"
            android:gravity="center_vertical"
            android:text="@string/stock_detail_chat_hint"/>

        <TextView
            android:id="@+id/tv_news_share"
            style="@style/MarketDetailButtonStyle"
            android:layout_marginRight="42dp"
            android:layout_toLeftOf="@+id/tv_news_collect"
            android:drawableTop="@drawable/icon_share"
            android:text="@string/share"/>

        <TextView
            android:id="@+id/tv_news_collect"
            style="@style/MarketDetailButtonStyle"
            android:layout_marginRight="42dp"
            android:layout_toLeftOf="@+id/tv_news_comment"
            android:drawableTop="@drawable/selector_news_collect"
            android:text="@string/collect"/>

        <TextView
            android:id="@+id/tv_news_comment"
            style="@style/MarketDetailButtonStyle"
            android:layout_alignParentRight="true"
            android:layout_marginRight="17dp"
            android:drawableTop="@drawable/btn_news_comment_n"
            android:text="@string/comment"/>

        <TextView
            android:id="@+id/tv_news_comment_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignRight="@id/tv_news_comment"
            android:layout_alignTop="@id/tv_news_comment"
            android:layout_marginRight="-9dp"
            android:layout_marginTop="-3dp"
            android:background="@drawable/shape_message_prompt"
            android:gravity="center_vertical"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:textColor="@color/pure_white"
            android:textSize="10sp"
            android:visibility="gone"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/line_gray"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_input_text"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/shape_chat_input_bg"
        android:orientation="horizontal"
        android:visibility="gone">

        <EditText
            android:id="@+id/et_comment"
            style="@style/DetailChatEditTextButton"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="15dp"
            android:layout_toLeftOf="@+id/tv_word_count"
            android:focusable="true"
            android:gravity="center_vertical|left"
            android:hint="@string/input_prompt"
            android:imeOptions="actionSend"
            android:maxLength="140"
            android:padding="0dp"
            android:textColorHint="@color/text_color_gray"/>

        <TextView
            android:id="@+id/tv_word_count"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_toLeftOf="@+id/iv_send"
            android:gravity="center_vertical"
            android:text="@string/stock_detail_chat_hint"/>

        <ImageView
            android:id="@+id/iv_send"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:padding="15dp"
            android:src="@drawable/btn_send_comment"/>
    </RelativeLayout>
</RelativeLayout>