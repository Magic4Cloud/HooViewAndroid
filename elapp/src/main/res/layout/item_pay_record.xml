<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/avatar_big_second_size"
    android:gravity="center_vertical"
    android:background="@color/white"
    android:paddingTop="8dip"
    android:orientation="horizontal">
    <TextView
        android:id="@+id/description_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_toLeftOf="@+id/barley_tv"
        android:layout_alignParentLeft="true"
        android:singleLine="true"
        android:textSize="@dimen/text_size_title_h2"
        android:textColor="@color/text_color_main"/>
    <TextView
        android:id="@+id/time_tv"
        android:layout_below="@id/description_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="2dp"
        android:singleLine="true"
        android:textSize="@dimen/text_size_13"
        android:textColor="@color/text_color_three_level"/>
    <TextView
        android:id="@+id/barley_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="15dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:text="@string/e_coin_count_rear"
        android:textSize="@dimen/text_size_12"
        android:textColor="@color/btn_color_main"/>
    <ImageView
        android:layout_alignParentBottom="true"
        style="@style/default_horizontal_line_style"/>
</RelativeLayout>

