<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical"
    android:paddingBottom="10dp"
    android:paddingTop="10dp">

    <FrameLayout
        android:id="@+id/fl_cover"
        android:layout_width="120dp"
        android:layout_height="80dp"
        android:layout_marginLeft="12dp">

        <ImageView
            android:id="@+id/iv_cover"
            android:layout_width="120dp"
            android:layout_height="80dp"
            android:background="@drawable/account_bitmap_list" />

        <TextView
            android:id="@+id/tv_tag_living"
            android:layout_width="52dp"
            android:layout_height="22dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:background="@drawable/shape_video_tag_living"
            android:text="@string/living"
            android:textColor="@color/text_color_white"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/iv_tag_payback"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:padding="9dp"
            android:background="@drawable/shape_video_tag_playback"
            android:src="@drawable/ic_playback_n"
            android:layout_gravity="center"
            android:visibility="visible" />
    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="22dp"
        android:layout_marginRight="22dp"
        android:layout_toRightOf="@+id/fl_cover"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:text="this is title"
            android:textColor="@color/text_color_black"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="name"
            android:textColor="@color/text_color_gray"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_watch_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="@string/watch_count"
            android:textColor="@color/text_color_gray"
            android:textSize="14sp" />

    </LinearLayout>
</RelativeLayout>