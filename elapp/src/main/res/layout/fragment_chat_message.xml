<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/chat_recycle_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="50dp"
        android:background="#f8f8f8"/>

    <com.easyvaas.elapp.view.ChatInputView
        android:id="@+id/chat_input_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <FrameLayout
        android:id="@+id/chat_gift_container_fl"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#7f303030"
        android:visibility="gone">

        <com.easyvaas.common.gift.view.GiftPagerView
            android:id="@+id/chat_gift_pager_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:visibility="visible"/>

    </FrameLayout>

</RelativeLayout>