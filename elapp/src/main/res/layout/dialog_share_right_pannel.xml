<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="120dp"
    android:layout_height="match_parent"
    android:background="@color/share_right_panel"
    android:gravity="center"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/iv_qq"
        style="@style/RecorderShareButtonStyle"
        android:src="@drawable/btn_qq_n" />

    <ImageView
        android:id="@+id/iv_zone"
        style="@style/RecorderShareButtonStyle"
        android:layout_marginTop="24dp"
        android:src="@drawable/btn_qzone_n" />

    <ImageView
        android:id="@+id/iv_wechat"
        style="@style/RecorderShareButtonStyle"
        android:layout_marginTop="24dp"
        android:src="@drawable/btn_wechat_n" />

    <ImageView
        android:id="@+id/iv_weixin_circle"
        style="@style/RecorderShareButtonStyle"
        android:layout_marginTop="24dp"
        android:src="@drawable/btn_moments_n" />

    <ImageView
        android:id="@+id/iv_weibo"
        style="@style/RecorderShareButtonStyle"
        android:layout_marginTop="24dp"
        android:src="@drawable/btn_weibo_n" />


</LinearLayout>