<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:id="@+id/set_password_root_ll"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/set_password_title_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="36dp"
        android:text="@string/prompt_password_input_live"
        android:textSize="@dimen/text_size_title_h2"
        android:textColor="@color/text_common"/>

    <LinearLayout
        android:id="@+id/password_area_ll"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:layout_below="@id/set_password_title_tv"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="22dp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/password_1_tv"
            style="@style/password_set_edit_style"/>
        <TextView
            android:id="@+id/password_2_tv"
            android:layout_marginLeft="16dp"
            style="@style/password_set_edit_style"/>
        <TextView
            android:id="@+id/password_3_tv"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            style="@style/password_set_edit_style"/>
        <TextView
            android:id="@+id/password_4_tv"
            style="@style/password_set_edit_style"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/keyboard_numbers_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="54dp">
            <Button
                android:id="@+id/btn_one"
                android:text="@string/one"
                style="@style/keyboard_number_text_style"/>
            <Button
                android:id="@+id/btn_two"
                android:text="@string/two"
                style="@style/keyboard_number_text_style"/>
            <Button
                android:id="@+id/btn_three"
                android:text="@string/three"
                style="@style/keyboard_number_text_style"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="54dp">
            <Button
                android:id="@+id/btn_four"
                android:text="@string/four"
                style="@style/keyboard_number_text_style"/>
            <Button
                android:id="@+id/btn_five"
                android:text="@string/five"
                style="@style/keyboard_number_text_style"/>
            <Button
                android:id="@+id/btn_six"
                android:text="@string/six"
                style="@style/keyboard_number_text_style"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="54dp">
            <Button
                android:id="@+id/btn_seven"
                android:text="@string/seven"
                style="@style/keyboard_number_text_style"/>
            <Button
                android:id="@+id/btn_eight"
                android:text="@string/eight"
                style="@style/keyboard_number_text_style"/>
            <Button
                android:id="@+id/btn_nine"
                android:text="@string/nine"
                style="@style/keyboard_number_text_style"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="54dp">
            <Button
                android:id="@+id/btn_delete"
                android:text="@string/delete"
                style="@style/keyboard_number_text_style"/>
            <Button
                android:id="@+id/btn_zero"
                android:text="@string/zero"
                style="@style/keyboard_number_text_style"/>
            <Button
                android:id="@+id/btn_cancel"
                android:text="@string/cancel"
                style="@style/keyboard_number_text_style"/>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
