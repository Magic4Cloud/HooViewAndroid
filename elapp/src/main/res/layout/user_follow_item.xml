<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@color/white"
              android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/selectableItemBackground"
        android:padding="14dp">

        <com.easyvaas.common.widget.MyUserPhoto
            android:id="@+id/user_follow_avator"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_alignParentLeft="true"
            android:src="@drawable/user_avtor"
            app:small_height="30dp"
            app:small_icon="@drawable/ic_v"
            app:small_width="30dp"/>

        <TextView
            android:id="@+id/user_follow_name"
            style="@style/user_text_style"
            android:layout_alignTop="@id/user_follow_avator"
            android:layout_marginLeft="17dp"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@id/user_follow_avator"
            android:text="浅海野"/>

        <TextView
            android:id="@+id/user_follow_info"
            style="@style/user_text_style"
            android:layout_below="@id/user_follow_name"
            android:layout_marginLeft="17dp"
            android:layout_marginTop="12dp"
            android:layout_toRightOf="@id/user_follow_avator"
            android:text="这里是我的自我介绍"
            android:textColor="@color/text_gray"/>
        <TextView
            android:id="@+id/user_follow_button"
            android:text="@string/user_follow"
            style="@style/user_focus_button_style"/>
    </RelativeLayout>
</LinearLayout>