<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:theme="?attr/actionBarPopupTheme"
    android:background="@drawable/list_item_video_up_down_selector">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp">
        <com.easyvaas.common.widget.MyUserPhoto
            android:id="@+id/video_my_user_photo"
            android:layout_width="@dimen/avatar_big_size"
            android:layout_height="@dimen/avatar_big_size"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:scaleType="fitCenter"
            app:src="@drawable/somebody"
            app:is_vip="no_vip"
            app:small_height="9dp"
            app:small_width="9dp"
            app:border_width="@dimen/avatar_border_width"/>
        <TextView
            android:id="@+id/user_name_tv"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_toRightOf="@id/video_my_user_photo"
            android:layout_marginLeft="10dip"
            android:layout_centerVertical="true"
            android:singleLine="true"
            android:ellipsize="end"
            android:textColor="@color/text_user_name_color_black"
            android:textSize="@dimen/text_size_title_h1"/>
        <TextView
            android:id="@+id/video_watching_count_tip_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:singleLine="true"
            android:ellipsize="end"
            android:textSize="@dimen/text_size_13"
            android:textColor="@color/text_watch_count_color_red"/>
    </RelativeLayout>

    <FrameLayout
        android:id="@+id/user_info_rl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="top">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="360dp">
            <ImageView
                android:id="@+id/video_img"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"/>
        </RelativeLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:layout_gravity="right|top"
            android:padding="9dp"
            android:orientation="vertical">
            <TextView
                android:id="@+id/video_start_time_tv"
                android:layout_width="54dp"
                android:layout_height="20dp"
                android:textColor="@color/text_white"
                android:gravity="center"
                android:textSize="@dimen/text_size_12"
                android:background="@drawable/btn_live_status_shape"/>
        </LinearLayout>
    </FrameLayout>

    <RelativeLayout
        android:id="@+id/video_user_layout"
        android:layout_height="40dp"
        android:layout_width="match_parent"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:paddingTop="4dp"
        android:paddingBottom="4dp"
        android:layout_gravity="bottom"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/video_title_tv"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:layout_centerVertical="true"
            android:singleLine="true"
            android:ellipsize="end"
            android:textColor="@color/text_user_name_color_black"
            android:textSize="@dimen/text_size_13"/>
    </RelativeLayout>
</LinearLayout>
