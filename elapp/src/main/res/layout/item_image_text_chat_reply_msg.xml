<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <LinearLayout
        android:id="@+id/ll_other"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvLevelOther"
                style="@style/CommentLevelStyle"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="12dp"
                android:text="LV222"
                android:visibility="gone"/>

            <TextView
                android:id="@+id/tvNameOther"
                android:layout_width="wrap_content"
                android:layout_height="22dp"
                android:layout_marginLeft="5dp"
                android:text="郭郡"
                android:textColor="#672f87"
                android:textSize="16sp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="12dp"
            android:background="@drawable/bg_chat_others"
            android:orientation="vertical"
            android:paddingBottom="2dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="2dp">

            <TextView
                android:id="@+id/tvComment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:text="看见了来开就看见了极乐空间了解了解李经理骷髅精灵就快了极乐空间拉开距离极乐空间李经理看见了看见了看见了框架"
                android:textColor="#303030"
                android:textSize="16sp"/>

            <TextView
                android:id="@+id/tv_reply"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="6dp"
                android:layout_marginTop="6dp"
                android:background="#fff"
                android:padding="6dp"
                android:text="回复王小黑：老师2号加仓不"/>
        </LinearLayout>
    </LinearLayout>


    <RelativeLayout
        android:id="@+id/ll_self"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:visibility="visible">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="12dp"
            android:layout_toLeftOf="@+id/ll_info"
            android:background="@drawable/bg_chat_myself"
            android:orientation="vertical"
            android:paddingBottom="2dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="2dp">

            <TextView
                android:id="@+id/tv_self_comment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:text="看见了来开就看见了极乐空间了解了解李经理骷髅精灵就快了极乐空间拉开距离极乐空间李经理看见了看见了看见了框架"
                android:textColor="#303030"
                android:textSize="16sp"/>

            <TextView
                android:id="@+id/tv_self_reply"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="6dp"
                android:layout_marginTop="6dp"
                android:background="#fff7d6"
                android:padding="6dp"
                android:text="回复王小黑：老师2号加仓不"
                android:textColor="#999999"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginTop="12dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvLevelSelf"
                style="@style/CommentLevelStyle"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="12dp"
                android:text="LV222"
                android:visibility="gone"/>

            <TextView
                android:id="@+id/tvNameSelf"
                android:layout_width="wrap_content"
                android:layout_height="22dp"
                android:layout_marginLeft="5dp"
                android:text="我"
                android:textColor="#672f87"
                android:textSize="16sp"/>
        </LinearLayout>
    </RelativeLayout>
</FrameLayout>