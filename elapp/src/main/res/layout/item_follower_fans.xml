<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/avatar_big_second_bg_size"
    android:background="@drawable/list_item_selector">
    <ImageView
        android:layout_alignParentBottom="true"
        style="@style/default_horizontal_line_style"/>
    <com.easyvaas.common.widget.MyUserPhoto
        android:id="@+id/my_user_photo"
        android:layout_width="@dimen/avatar_big_second_size"
        android:layout_height="@dimen/avatar_big_second_size"
        android:layout_marginLeft="15dp"
        android:layout_centerVertical="true"
        android:scaleType="fitCenter"
        app:src="@drawable/somebody"
        app:is_vip="no_vip"
        app:small_height="10dp"
        app:small_width="10dp"
        app:border_color="@color/round_border"
        app:border_width="@dimen/avatar_border_width"/>
    <Button
        android:id="@+id/follow_cb"
        android:layout_width="60dp"
        android:layout_height="25dp"
        android:layout_marginRight="15dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:gravity="center"
        android:textColor="@color/login_btn_color"
        android:textSize="13sp"
        android:text="@string/follow"
        android:background="@drawable/common_button_round_three_blue_selector"/>

    <LinearLayout
        android:id="@+id/title_layout"
        android:layout_toRightOf="@id/my_user_photo"
        android:layout_toLeftOf="@id/follow_cb"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_centerVertical="true"
        android:gravity="left"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="4dp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/nickname_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawablePadding="4dp"
                android:singleLine="true"
                android:textSize="@dimen/text_size_title_h1"
                android:textColor="@color/login_text_color_3"
                android:text="@string/empty_value"/>

            <TextView
                android:id="@+id/distance_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/plaza_icon_gps_gray"
                android:drawablePadding="4dp"
                android:layout_marginLeft="10dp"
                android:singleLine="true"
                android:ellipsize="end"
                android:textSize="@dimen/text_size_11"
                android:textColor="@color/text_common"
                android:text="@string/empty_value"
                android:visibility="gone"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/user_ext_info_ll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="4dp"
            android:gravity="left|center_vertical"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/user_gender_tv"
                android:layout_width="28dp"
                android:layout_height="12dp"
                android:gravity="center"
                android:textSize="@dimen/text_size_10"
                android:drawablePadding="1dp"
                android:paddingLeft="3dp"
                android:paddingRight="3dp"
                android:textColor="@color/white"/>
            <TextView
                android:id="@+id/user_constellation_tv"
                android:layout_width="28dp"
                android:layout_height="12dp"
                android:gravity="center"
                android:textSize="@dimen/text_size_10"
                android:visibility="gone"
                android:textColor="@color/base_bg_btn_color_blue"
                android:layout_marginLeft="4dp"
                android:background="@drawable/personal_icon_constellation_bg"/>
        </LinearLayout>
        <TextView
            android:id="@+id/signature_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="4dp"
            android:singleLine="true"
            android:textSize="@dimen/text_size_13"
            android:textColor="@color/login_text_color_5"/>
        <TextView
            android:id="@+id/live_info_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:drawablePadding="4dp"
            android:singleLine="true"
            android:ellipsize="end"
            android:textSize="@dimen/text_size_11"
            android:textColor="@color/text_gray"
            android:visibility="gone"/>
    </LinearLayout>
</RelativeLayout>
