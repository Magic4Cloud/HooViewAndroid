<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#f8f8f8"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/my_live_room_rl"
        android:layout_width="match_parent"
        android:layout_height="96dp"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:background="#fff"
        android:orientation="vertical">

        <View
            android:layout_width="6dp"
            android:layout_height="match_parent"
            android:background="#672f87"/>

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="22dp"
            android:layout_marginTop="8dp"
            android:text="经济巡航的直播间"
            android:textColor="#303030"
            android:textSize="16sp"/>

        <LinearLayout
            android:id="@+id/ll_tag_container"
            android:layout_width="match_parent"
            android:layout_height="22dp"
            android:layout_below="@+id/tv_name"
            android:layout_marginLeft="22dp"
            android:layout_marginTop="8dp"
            android:orientation="horizontal"/>

        <TextView
            android:id="@+id/tv_watch_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ll_tag_container"
            android:layout_marginLeft="22dp"
            android:layout_marginTop="9dp"
            android:text="1,184人关注"
            android:textColor="#999999"/>

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_arrow_right_personal_more"/>
    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="34dp"
        android:background="#fff"
        android:gravity="center_vertical"
        android:paddingLeft="16dp"
        android:text="视频直播"
        android:textSize="14sp"/>
</LinearLayout>