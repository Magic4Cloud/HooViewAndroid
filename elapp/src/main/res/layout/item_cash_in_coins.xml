<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:background="@color/white"
    android:orientation="horizontal">
    <TextView
        android:id="@+id/exchange_coins_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="10dp"
        android:layout_alignParentTop="true"
        android:layout_centerVertical="true"
        android:text="@string/e_coin_count_rear"
        android:textSize="@dimen/text_size_title_h1"
        android:textColor="@color/live_topic_item_text_color"/>
    <TextView
        android:id="@+id/exchange_coins_give_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:paddingLeft="15dp"
        android:layout_marginTop="4dp"
        android:layout_below="@+id/exchange_coins_tv"
        android:layout_centerVertical="true"
        android:textSize="@dimen/text_size_13"
        android:text="@string/e_coin_give_count_rear"
        android:textColor="@color/text_color_secondary_level"/>
    <CheckBox
        android:id="@+id/exchange_money_tv"
        android:layout_width="60dp"
        android:layout_height="25dp"
        android:layout_marginRight="15dp"
        android:button="@null"
        android:gravity="center"
        android:textColor="@color/text_btn_selector"
        android:layout_gravity="right"
        android:layout_centerVertical="true"
        android:textSize="@dimen/text_size_11"
        android:text="@string/cash_count"
        android:layout_alignParentRight="true"
        android:background="@drawable/round_btn_selector"
        style="?android:buttonBarButtonStyle"/>
    <ImageView
        android:layout_alignParentBottom="true"
        style="@style/default_horizontal_line_style"/>
</RelativeLayout>

