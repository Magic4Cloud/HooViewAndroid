<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_enabled="false">
        <shape>
            <solid
                android:color="@color/red_alpha_percent_50"/>
            <corners
                android:radius="3dp"/>
        </shape>
    </item>
    <item android:state_selected="true">
        <shape>
            <solid
                android:color="@color/login_btn_color"/>
            <corners
                android:radius="3dp"/>
            <stroke android:color="@color/login_btn_color"
                    android:width="1dp"/>
        </shape>
    </item>
    <item android:state_selected="false" android:state_pressed="true">
        <shape>
            <solid
                android:color="@color/color_main_pressed"/>
            <corners
                android:radius="3dp"/>
            <stroke android:color="@color/color_main_pressed"
                    android:width="1dp"/>
        </shape>
    </item>
    <item android:state_selected="false" android:state_pressed="false">
        <shape>
            <solid
                android:color="@color/color_main"/>
            <corners
                android:radius="3dp"/>
            <stroke android:color="@color/color_main"
                    android:width="1dp"/>
        </shape>
    </item>
</selector>
