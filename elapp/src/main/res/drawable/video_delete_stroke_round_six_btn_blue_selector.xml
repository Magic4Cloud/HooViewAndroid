<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_enabled="false">
        <shape >
            <stroke
                android:width="1dp"
                android:color="@color/text_gray"/>
            <corners
                android:radius="6dp"/>
        </shape>
    </item>
    <item android:state_selected="true">
        <shape>
            <stroke
                android:width="1dp"
                android:color="@color/color_main_pressed"/>
            <solid
                android:color="@android:color/transparent"/>
            <corners
                android:radius="6dp"/>
        </shape>
    </item>
    <item android:state_selected="false" android:state_pressed="true">
        <shape>
            <stroke
                android:width="1dp"
                android:color="@color/color_main_pressed"/>
            <solid
                android:color="@android:color/transparent"/>
            <corners
                android:radius="6dp"/>
        </shape>
    </item>
    <item android:state_selected="false" android:state_pressed="false">
        <shape>
            <solid android:color="@android:color/transparent"/>
            <stroke
                android:width="1dp"
                android:color="@color/color_main_pressed"/>
            <corners
                android:radius="6dp"/>
        </shape>
    </item>
</selector>
