<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_enabled="false">
        <shape>
            <solid
                android:color="@color/text_gray"/>
            <corners
                android:radius="3dp"/>
        </shape>
    </item>
    <item android:state_selected="true">
        <shape>
            <solid
                android:color="@color/base_color_btn_fill_red_focused"/>
            <corners
                android:radius="3dp"/>
        </shape>
    </item>
    <item android:state_selected="false" android:state_pressed="true">
        <shape>
            <solid
                android:color="@color/base_color_btn_fill_red_focused"/>
            <corners
                android:radius="3dp"/>
        </shape>
    </item>
    <item android:state_selected="false" android:state_pressed="false">
        <shape>
            <solid
                android:color="@color/base_color_btn_fill_red"/>
            <corners
                android:radius="3dp"/>
        </shape>
    </item>
</selector>
