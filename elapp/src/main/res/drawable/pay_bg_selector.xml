<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_checked="false">
        <shape>
            <stroke android:color="@color/color_main_pressed" android:width="1dp"/>
            <solid android:color="@color/white_alpha_percent_90"/>
            <corners
                android:radius="3dp"/>
        </shape>
    </item>
    <item android:state_checked="true">
        <shape>
            <stroke android:color="@color/color_main" android:width="1dp"/>
            <solid android:color="@color/white_alpha_percent_90"/>
            <corners
                android:radius="3dp"/>
        </shape>
    </item>
</selector>