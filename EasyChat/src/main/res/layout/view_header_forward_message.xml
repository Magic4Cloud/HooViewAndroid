<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <include
        android:id="@+id/search_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        layout="@layout/include_search_bar"/>

    <RelativeLayout
        android:id="@+id/chat_to_new_user_rl"
        style="@style/item_about_us">
        <TextView
            android:id="@+id/chat_to_new_user_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:text="@string/chat_to_new_user"
            android:textColor="@color/text_mine_item"
            android:textSize="@dimen/text_size_title_h2"/>
        <ImageView
            android:id="@+id/chat_to_new_arrow_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:src="@drawable/ic_arrow_right_personal_more"/>
    </RelativeLayout>
    <TextView
        android:id="@+id/recently_user_tip_tv"
        android:layout_width="match_parent"
        android:layout_height="34dp"
        android:gravity="center_vertical"
        android:paddingLeft="14dp"
        android:text="@string/chat_recently_user"
        android:textColor="@color/text_login"
        android:textSize="@dimen/text_size_13"
        android:background="@color/background_content"/>

    <ImageView
        style="@style/default_horizontal_line_style"
        android:layout_height="0.8dp"/>
</LinearLayout>
