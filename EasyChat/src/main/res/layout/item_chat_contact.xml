<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/transparent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="18dp"
        android:background="@color/item_divider_1"
        android:paddingLeft="14dp"
        android:textColor="#454545"
        android:textSize="@dimen/text_size_10"
        android:visibility="gone"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/list_item_video_limit_height"
        android:background="@drawable/mm_listitem_green"
        android:duplicateParentState="true">
        <com.easyvaas.common.widget.MyUserPhoto
            android:id="@+id/avatar"
            android:layout_width="38dp"
            android:layout_height="38dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="11dp"
            android:scaleType="fitCenter"
            android:src="@drawable/somebody"
            app:is_vip="no_vip"
            app:border_color="@color/round_border"
            app:border_width="@dimen/avatar_border_width"
            app:small_height="8dp"
            app:small_width="8dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="11dp"
            android:layout_toLeftOf="@+id/unread_msg_number"
            android:layout_toRightOf="@id/avatar"
            android:gravity="center_vertical"
            android:orientation="vertical">
            <TextView
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="4dp"
                android:ellipsize="end"
                android:singleLine="true"
                android:textColor="@color/text_subtitle"
                android:textSize="@dimen/text_size_13"/>
            <TextView
                android:id="@+id/signature"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="4dp"
                android:layout_marginTop="4dp"
                android:ellipsize="end"
                android:singleLine="true"
                android:textColor="@color/text_subtitle"
                android:textSize="@dimen/text_size_12"
                android:visibility="gone"/>
        </LinearLayout>

        <TextView
            android:layout_centerVertical="true"
            android:id="@+id/unread_msg_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"
            android:background="@drawable/unread_dot"
            android:gravity="center"
            android:visibility="invisible"
            android:textSize="12sp"/>
    </RelativeLayout>
</LinearLayout>
